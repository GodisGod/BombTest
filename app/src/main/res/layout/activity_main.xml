<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chance Test" />

    <EditText
        android:id="@+id/ed_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:hint="添加文字" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="点击下面选择要发送的图片"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_send"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="#ffff" />

    <ImageView
        android:id="@+id/img_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#60af" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_send_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送文字" />

            <Button
                android:id="@+id/btn_send_audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送语音" />

            <Button
                android:id="@+id/btn_send_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送图片" />

            <Button
                android:id="@+id/btn_send_img_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="发送图文" />


            <Button
                android:id="@+id/jump_to_discover"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="跳转到发现页面" />

            <Button
                android:id="@+id/jump_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="跳转到分享页面" />

            <Button
                android:id="@+id/jump_conversation_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="跳转到消息列表" />

            <Button
                android:id="@+id/query_userinfo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="根据ID查询Userinfo" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
